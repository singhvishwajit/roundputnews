<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.title %></td>
        <td><%= link_to link.url, link.url %></td>
        <td><%= link_to 'Show', link, class: "btn btn-link" %></td>
        <% if link.user == current_user %>
          <td><%= link_to 'Edit', edit_link_path(link), class: "btn btn-link" %></td>
          <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Link', new_link_path, class: "btn btn-link" %>
<% end %>  

